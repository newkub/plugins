{
  "name": "plugins",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "tsdown-plugins",
    "tsdown-plugins/packages/*",
    "vite-plugins",
    "vitest-plugins",
    "vitest-plugins/packages/*",
    "vitest-plugins/examples/*"
  ],
  "scripts": {
    "watch": "turbo watch verify --ui=tui",
    "prepare": "lefthook install",
    "dev": "turbo dev --ui=tui",
    "format": "turbo format",
    "scan": "sg scan -r",
    "check:modules": "bunx node-modules-inspector",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "verify": "turbo verify"
  },
  "devDependencies": {
    "dprint": "^0.51.1",
    "oxlint": "^1.38.0",
    "oxlint-tsgolint": "^0.10.1",
    "turbo": "^2.7.3"
  }
}
